    <section id="main" class="wrapper">
        <div id="Instructor" class="container">
            <h5>Create Instructor</h5>
            <div class="card-body">
                <form action="/createInstructor/submit" method="POST">
                    <div class="form-group">
                        <label for="id"></label>
                        <input type="text" class="form-control" id="id" name="id" placeholder="Enter Instructor ID">
                    </div>
                    <div class="form-group">
                        <label for="name"></label>
                        <input type="text" class="form-control" id="name" name="name"
                            placeholder="Enter Instuctor Name">
                    </div>
                    <div class="form-group">
                        <label for="email"></label>
                        <input type="text" class="form-control" id="email" name="email"
                            placeholder="Enter Instuctor Email">
                    </div>
                    <button type="submit" class="btn btn-primary">Add Instructor</button>
                </form>
            </div>
        </div>
        <div id="view" class="container">
            <h5>List of All Instructors</h5>
            <table>
                <tbody>
                    <tr>
                        <td>ID</td>
                        <td> Name</td>
                        <td> Email</td>
                    </tr>
                    {{#each ins}}

                    <tr>
                        <td>{{this.Id}}</td>
                        <td>{{this.Name}}</td>
                        <td>{{this.Email}}</td>
                        <td><a href="/deleteInstructor/{{Id}}">Delete </a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </section>
